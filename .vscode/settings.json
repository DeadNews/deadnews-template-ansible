// Workspace settings override user settings.
{
  "files.associations": {
    ".ansible-lint": "yaml",
    "**/handlers/*.yml": "ansible",
    "**/meta/*.yml": "ansible",
    "**/playbooks/**/*.yml": "ansible",
    "**/roles/**/*.yml": "ansible",
    "**/tasks/**/*.yml": "ansible",
    "ansible.cfg": "properties"
  },
  "[ansible]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
